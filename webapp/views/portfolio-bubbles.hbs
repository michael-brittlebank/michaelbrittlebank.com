<main class="portfolio-item portfolio bubbles">
    <section id="container-content" class="row">
        <div id="content-code" class="small-12 medium-6 columns small-order-2 medium-order-1 content">
            the code here
        </div>
        <div id="content-bubbles" class="small-12 medium-6 columns small-order-1 medium-order-2 content">
            the bubbles here
        </div>
    </section>
    <section id="bubble-controls" class="small-12 columns">
        <div class="row">
            <div class="small-4 medium-2 columns">
                <label for="smallBubbles">Small Bubbles</label>
                <input id="smallBubbles" type="number" value="3"/>
            </div>
            <div class="small-4 medium-2 columns">
                <label for="mediumBubbles">Medium Bubbles</label>
                <input id="mediumBubbles" type="number" value="0"/>
            </div>
            <div class="small-4 medium-2 columns">
                <label for="largeBubbles">Large Bubbles</label>
                <input id="largeBubbles" type="number" value="0"/>
            </div>
            <div class="small-12 medium-4 columns">
                <button id="startBubbles" class="button">Start Bubbles</button>
                <button id="stopBubbles" class="button disabled">Stop Bubbles</button>
                <button id="clearBubbles" class="button disabled">Clear Bubbles</button>
            </div>
        </div>
    </section>
    {{>portfolio-footer page}}
</main>
<script type="text/javascript">
    $(function(){
        bubbles.init();
    });
</script>