<main id="page-portfolio">
    <section class="grid-container row">
        <h1 class="page-title">Portfolio</h1>
        <div id="portfolio-quote-container" class="col-sm-12">
            {{#each quotes}}
                <div class="portfolio-quote">
                    {{{body}}}
                    <h5 class="portfolio-quote-author">{{author}} {{#if source}}- {{source}}{{/if}}</h5>
                </div>
            {{/each}}
        </div>
    </section>
    <section>
        {{#each portfolioGroups}}
            <div class="grid-container row">
                <h2 class="portfolio-carousel-header">{{title}}</h2>
            </div>
            <div class="portfolio-carousel">
                {{#each items}}
                    <a href="#modal-{{slug}}">
                        <div class="portfolio-carousel-content {{slug}}">
                            <h3 class="portfolio-carousel-item-title">{{title}}</h3>
                            {{{icon}}}
                        </div>
                    </a>
                {{/each}}
            </div>
        {{/each}}
    </section>
    <aside id="container-modals">
        {{#each portfolioGroups}}
            {{#each items}}
                <section class="modal--fade" id="modal-{{slug}}" data-stackable="false" tabindex="-1" role="dialog" aria-labelledby="label-fade" aria-hidden="true">
                    <div class="modal-inner">
                        <h3>{{title}}</h3>
                        {{{body}}}
                        <div id="modal-footer">
                            {{#if techStack}}
                                <p class="tech-stack"><span class="title">Tech Stack:</span> {{techStack}}</p>
                            {{/if}}
                            <div class="row">
                                {{#if url}}
                                    <div class="col-sm-6">
                                        <a href="{{url}}"><i class="fa fa-folder-open-o"></i>View Project</a>
                                    </div>
                                {{/if}}
                                {{#if repositoryUrl}}
                                    <div class="col-sm-6">
                                        <a href="{{repositoryUrl}}" target="_blank"><i class="fa fa-code"></i>View Code</a>
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    <a href="#!" class="modal-close" title="Close this modal"
                       data-dismiss="modal" data-close="Close">&times;</a>
                </section>
            {{/each}}
        {{/each}}
    </aside>
</main>