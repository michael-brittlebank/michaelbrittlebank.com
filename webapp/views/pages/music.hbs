<main class="row page music">
    <section id="container-content" class="small-12 columns">
        <div id="grid-post" class="grid">
            {{#each posts}}
                <div class="post" onclick="window.location.href='{{url}}'" data-group="{{../group}}">
                    <div class="content-post">
                        <h3 class="post-title">{{title}}</h3>
                        <h5 class="post-date"><i class="fa fa-calendar"></i>{{postDate}}</h5>
                        <hr>
                        <div class="post-excerpt">
                            {{{excerpt}}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
    {{#compare posts.length 20 operator="==="}}
        <section id="container-button" class="small-12 columns">
            <i id="loading-spinner" class="fa fa-spin fa-circle-o-notch"></i>
            <br/>
            <button id="load-more" class="button" onclick="music.loadMoreArticles();">Load More</button>
        </section>
    {{/compare}}
</main>