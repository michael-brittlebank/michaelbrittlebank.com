<footer>
    <div class="row">
        <div id="footer-find-me" class="small-12 medium-4 columns">
            <ul class="menu">
                <li>
                    <h5>Find Me:</h5>
                </li>
                <li>
                    <a href="{{site.linkedIn}}" target="_blank"><i class="fa fa-linkedin"></i></a>
                </li>
                <li>
                    <a href="{{site.github}}" target="_blank"><i class="fa fa-github-alt"></i></a>
                </li>
            </ul>
        </div>
        <div id="footer-portfolio" class="small-12 medium-4 columns">
            <h5>Portfolio</h5>
            <ul class="menu vertical column-width-2">
                {{#each menu.portfolio.children}}
                    {{#compare children.length 0 operator=">"}}
                        <li class="has-dropdown">
                            {{#if url}}
                                <a href="{{url}}">{{title}}</a>
                            {{else}}
                                <a>{{title}}</a>
                            {{/if}}
                            <ul class="dropdown">
                                {{#each children}}
                                    <li><a href="{{url}}">{{title}}</a></li>
                                {{/each}}
                            </ul>
                        </li>
                    {{else}}
                        <li><a href="{{url}}">{{title}}</a></li>
                    {{/compare}}
                {{/each}}
            </ul>
        </div>
    </div>
</footer>