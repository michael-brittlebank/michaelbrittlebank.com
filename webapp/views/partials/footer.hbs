<footer class="row">
    <div class="small-12 columns">
        <div class="row">
            <div class="small-4 columns">
                <a href="{{site.linkedIn}}" target="_blank"><i class="fa fa-linkedin"></i></a>
            </div>
            <div class="small-4 columns">
                <a href="{{site.github}}" target="_blank"><i class="fa fa-github-alt"></i></a>
            </div>
            <div class="small-4 columns">
                <a href="{{site.music}}" target="_blank"><i class="fa fa-music"></i></a>
            </div>
        </div>
    </div>
    <div class="small-12 columns">
        {{#each menu.portfolio.children}}
            {{#compare children.length 0 operator=">"}}
                <li class="has-dropdown">
                    {{#if url}}
                        <a href="{{url}}">{{title}}</a>
                    {{else}}
                        <a>{{title}}</a>
                    {{/if}}
                    <ul class="dropdown">
                        {{#each children}}
                            <li><a href="{{url}}">{{title}}</a></li>
                        {{/each}}
                    </ul>
                </li>
            {{else}}
                <li><a href="{{url}}">{{title}}</a></li>
            {{/compare}}
        {{/each}}
    </div>
</footer>

<!-- JS -->
<script type="text/javascript" src='/js/app.footer.min.js'></script>
<script type="text/javascript" src='/js/app.main.min.js'></script>