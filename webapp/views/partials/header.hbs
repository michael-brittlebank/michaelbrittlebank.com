<header>
    <div class="grid-container row">
        <div class="col-sm-12 show-for-small text-right position-relative">
            <i id="header-mobile-menu" class="fa fa-bars" aria-hidden="true"></i>
        </div>
        <nav class="col-sm-12 text-right hide-for-small">
            <ul class="standard-menu">
                {{#each menuItems}}
                    <li>
                        <a href="{{url}}" class="{{#if isActive}}active{{/if}}">{{title}}</a>
                    </li>
                {{/each}}
            </ul>
        </nav>
    </div>
</header>