<div class="error not-found row align-center">
    <section id="container-content" class="small-12 medium-10 large-8 columns">
        <div class="row align-stretch">
            <section id="container-title" class="small-12 medium-4 columns">
                <h3>Error:</h3>
                <h1 class="page-title">{{page.title}}</h1>
            </section>
            <section class="small-12 medium-8 columns">
                <div id="container-translations">
                    {{#each translations}}
                        <h3 id="translations-{{@index}}" class="translations">{{this}}</h3>
                    {{/each}}
                </div>
                <div class="page-body">
                    {{{page.body}}}
                </div>
            </section>
            <section class="small-0 medium-4 columns">
            </section>
            <section  id="container-button" class="small-12 medium-8 columns">
                <a class="button" href="/">Go To Homepage</a>
            </section>
        </div>
    </section>
</div>
<script type="text/javascript">
    $(function(){
        page404.init();
    });
</script>