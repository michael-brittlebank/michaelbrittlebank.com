<main id="page-homepage" class="grid-container row">
    {{#each homepageBlocks}}
        <section id="homepage-block-{{@index}}" class="homepage-block col-sm-6 opaque {{#if image}}homepage-image-block{{else}}homepage-icon-block{{/if}}" data-url="{{url}}">
            <div class="homepage-block-body">
                {{#if image}}
                    <img src="{{image}}"/>
                {{else}}
                    {{{icon}}}
                {{/if}}
            </div>
            <div class="hover-filter hover-filter-back">&nbsp;</div>
            <div class="hover-filter hover-filter-front">&nbsp;</div>
            <h2 class="hover-filter hover-filter-text">{{title}}</h2>
            <div class="hover-filter hover-filter-overlay">&nbsp;</div>
        </section>
    {{/each}}
</main>